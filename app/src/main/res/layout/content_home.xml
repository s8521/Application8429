<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sakusai.application8429.home"
    android:background="#debbfa"
    android:clickable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="臥床行動裝置"
        android:id="@+id/button2"
        android:textSize="22dp"
        android:background="#fa5bc5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜尋"
        android:id="@+id/button3"
        android:textSize="16dp"
        android:background="#fbdf60"
        android:textColor="#050404"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginTop="79dp"
        android:onClick="tosearch" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:textSize="16dp"
        android:text="病名"
        android:textColor="#070606"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圖片辨識"
        android:id="@+id/button4"
        android:textSize="16dp"
        android:textColor="#070606"
        android:background="#abfb7d"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="toPhoto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小常識"
        android:id="@+id/button5"
        android:textSize="16dp"
        android:textColor="#070606"
        android:background="#ee403a"
        android:layout_below="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:onClick="toknowledge" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歷程"
        android:id="@+id/button6"
        android:textSize="16dp"
        android:textColor="#070606"
        android:background="#96e7fa"
        android:singleLine="true"
        android:layout_alignTop="@+id/button17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="tocourse" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="影像辨識"
        android:id="@+id/button7"
        android:textSize="16dp"
        android:textColor="#040404"
        android:background="#abfb7d"
        android:layout_below="@+id/button17"
        android:layout_alignLeft="@+id/button17"
        android:layout_alignStart="@+id/button17"
        android:layout_marginTop="27dp"
        android:onClick="toKagehen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="紀錄"
        android:id="@+id/button17"
        android:textColor="#070606"
        android:background="#bd9ea1"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />
</RelativeLayout>
